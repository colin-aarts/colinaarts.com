@import '~style/config'
@import '~style/icons'

:local(.prefix)
	display: flex
	flex-wrap: wrap
	align-items: center
	list-style: none
	margin: 0.5rem -0.15rem -0.15rem
	padding: 0
	line-height: 1

	&:before
		fa(tags)
		margin-right: 1ex

	> li
		margin: 0.15rem
		font-size: 0.9em
		border: 1px solid hsla(colors.accent-2, 0.5)
		background: hsla(colors.accent-2, 0.25)
		border-radius: 3px
		white-space: nowrap
		padding: 0.2em 0.5ex

		> a
			border: 0

			{interact}
				color: colors.text

			&:after
				content: none
