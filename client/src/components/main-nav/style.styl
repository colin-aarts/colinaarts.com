@import '~style/config'
@import '~style/icons'

:local(.prefix)
	ul
		padding: 0
		margin: 1rem -1rem 0 0
		list-style: none
		display: flex
		justify-content: flex-end

		> li
			&.active
				> a
					&:after
						right: 1rem

			> a
				position: relative
				display: inline-block
				padding: 1rem
				font-size: 1.7rem
				font-family: Garamond
				font-style: italic
				line-height: 1
				border: 0

				&:visited
					color: colors.link

				&:after
					content: ''
					position: absolute
					bottom: 0.75rem
					left: 1rem
					right: 100%
					height: 3px
					background: hotpink
					transition-duration: 0.5s

				{interact}
					background: hsla(colors.accent-2, 0.5)

			&.github > a:before
				fa(github)
				font-style: normal
