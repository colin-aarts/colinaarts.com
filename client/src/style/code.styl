code,
samp
	background: hsla(white, 0.25)
	border-radius: 0.1em
	padding: 0 0.5ex
	font-family: Consolas, Monaco, monospace
	font-size: 0.9em
	-moz-tab-size: 2;
	-o-tab-size: 2;
	tab-size: 2;

samp.error
	color: colors.error

pre[class*='language-']
	no-break()

pre code
	background: hsla(white, 0.25)
	display: block
	margin-top: 0.5rem
	padding: 1rem
	border: 0
	white-space: pre-wrap
	position: relative

	&:after
		content: attr(title)
		position: absolute
		right: 0
		bottom: 100%
		background: hsla(white, 0.25)
		border-bottom: 1px solid hsla(0, 0%, 100%, 1)
		padding: 0.2ex 1ex
		color: colors.text
		font-size: 0.9em
